{
    "name": "open-source-society",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "pre-build": "python pages/markdown_compiler.py && python tools/translations.py",
        "dev": "pnpm pre-build && vite dev",
        "build": "pnpm pre-build && vite build",
        "preview": "vite preview",
        "test": "playwright test",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check --plugin-search-dir=. . && eslint .",
        "format": "prettier --write --plugin-search-dir=. .",
        "make-translations": "python tools/translations.py",
        "make-colors": "python tools/generate-tags-color-list.py"
    },
    "devDependencies": {
        "@playwright/test": "^1.25.0",
        "@sveltejs/adapter-auto": "next",
        "@sveltejs/kit": "next",
        "@tailwindcss/typography": "^0.5.4",
        "@typescript-eslint/eslint-plugin": "^5.33.1",
        "@typescript-eslint/parser": "^5.33.1",
        "autoprefixer": "^10.4.8",
        "eslint": "^8.22.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-svelte3": "^4.0.0",
        "mdsvex": "^0.10.6",
        "postcss": "^8.4.16",
        "prettier": "^2.7.1",
        "svelte": "^3.49.0",
        "svelte-check": "^2.8.1",
        "svelte-preprocess": "^4.10.7",
        "tailwindcss": "^3.1.8",
        "tslib": "^2.4.0",
        "typescript": "^4.7.4",
        "vite": "^3.0.9"
    },
    "type": "module",
    "dependencies": {
        "@sveltejs/adapter-static": "1.0.0-next.39",
        "prettier-plugin-tailwindcss": "^0.1.13",
        "svelte-intl-precompile": "^0.12.0"
    }
}
